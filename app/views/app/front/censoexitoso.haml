!!!
%html
  %head
    = render 'app/partials/head'
    :javascript
      addEventListener("load", function () {
      	setTimeout(hideURLbar, 0);
      }, false);

      function hideURLbar() {
      	window.scrollTo(0, 1);
      }
  %body
    = render 'app/partials/navbar'
    %section.main-content-w3layouts-agileits
      %h3.tittle Su censo ha sido registrado exitosamente
      .container
        .row
          .col-xs-12
            .table-responsive
              %table.table.table-bordered.table-hover{summary: "This table shows how to create responsive tables using Bootstrap's default functionality"}
                -# %caption.text-center
                -#   An example of a responsive table based on
                -#   = succeed ":" do
                -#     %a{href: "https://getbootstrap.com/css/#tables-responsive", target: "_blank"} Bootstrap
                %thead
                  %tr
                    %th Nombre
                    %th Apellido
                    %th Fecha de Nacimiento
                    %th Edad
                    %th Profesión
                    %th Nivel de Estudio
                    %th Sector
                    %th Piso
                    %th Calle
                    %th Casa
                %tbody
                  %tr
                    %td= @censo.name
                    %td= @censo.last_name
                    %td= @censo.birthdate
                    %td= @censo.edad
                    %td= @censo.profesion
                    %td= @censo.nivel_estudio
                    %td= @censo.sector
                    %td= @censo.piso
                    %td= @censo.calle
                    %td= @censo.casa
                -# %tfoot
                -#   %tr
                -#     %td.text-center{colspan: "10"}
                -#       %a{href: "http://www.infoplease.com/ipa/A0855611.html", target: "_blank"} Descargar
    / footer
    %footer
      .container
        .footer-cpy.text-center
          .footer-social
            .copyrighttop
              %ul
                %li.mx-3
                  %a.facebook{:href => "#"}
                    %i.fa.fa-facebook-f
                    %span Facebook
                %li
                  %a.facebook{:href => "#"}
                    %i.fa.fa-twitter
                    %span Twitter
          .w3layouts-agile-copyrightbottom
            %p
              © Consejo Comunal Bicentenario | Diseñado y Desarrollado por
              %a{:href => "#"} Servidores Comunitarios
        / //footer
    /
    / js
    %script{:src => "../assets/js/jquery-2.2.3.min.js"}
    / //js
    / / start-smoth-scrolling
    %script{:src => "../assets/js/move-top.js"}
    %script{:src => "../assets/js/easing.js"}
    :javascript
      jQuery(document).ready(function ($) {
      	$(".scroll").click(function (event) {
      		event.preventDefault();
      		$('html,body').animate({
      			scrollTop: $(this.hash).offset().top
      		}, 900);
      	});
      });
    / // end-smoth-scrolling
    :javascript
      $(document).ready(function () {
      	/*
      							var defaults = {
      					  			containerID: 'toTop', // fading element id
      								containerHoverID: 'toTopHover', // fading element hover id
      								scrollSpeed: 1200,
      								easingType: 'linear'
      					 		};
      							*/

      	$().UItoTop({
      		easingType: 'easeOutQuart'
      	});

      });
    %a#toTop.scroll{:href => "#home", :style => "display: block;"}
      %span#toTopHover{:style => "opacity: 1;"}
    / //Custom-JavaScript-File-Links
    %script{:src => "../assets/js/bootstrap.js"}
