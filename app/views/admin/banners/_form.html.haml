= simple_form_for [:admin, @banner] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_banners_path, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t("keppler.modules.#{action_name.underscore}")
            .box-tools.pull-right
              %a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    .upload-image
                      = f.label :banner
                      .files.form-group.trigger{ class: "#{'files-absolute' unless @banner.banner.blank?}" }
                        #icon-file
                          +
                        = f.file_field :banner, class: 'photo_upload'
                      %center#image
                        = image_tag "#{@banner.banner.blank? ? '' : @banner.banner}", class: "#{'hidden' if @banner.banner.blank?} image_to_upload"
                  .col-xs-12
                  .col-xs-12
                    = f.input :title
                    = f.input :description
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t("keppler.actions.save"), name: '_save', class: "btn-primary"
                      = f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
